<div>
    <h1>Edit Course</h1>
</div>

<form method="POST" action="/me/courses/{{course._id}}">
    <div class="mb-3">
        <label for="name">Name</label>
        <input type="text" value="{{course.name}}" class="form-control" name="name">
    </div>
    <div class="mb-3">
        <label for="decription">Decription</label>
        <input type="text" value="{{course.description}}" class="form-control" name="description">
    </div>
    <div class="mb-3">
        <label for="videoId">VideoId</label>
        <input type="text" value="{{course.videoId}}" class="form-control" name="videoId">
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>